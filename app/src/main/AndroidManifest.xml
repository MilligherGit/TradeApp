<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tradeappv20">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_trade"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_trade_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TradeAppV20">
        <activity android:name=".CollectionActivity.ItemActivity"></activity>
        <activity android:name=".CollectionActivity.AnotherCollectionActivity" />
        <activity android:name=".CollectionActivity.AddCollectionItemActivity" />
        <activity android:name=".CollectionActivity.CollectionActivity" />
        <activity android:name=".ChatActivity.MessageActivity" />
        <activity android:name=".ChatActivity.ChatActivity" />
        <activity
            android:name=".LoginActivity.LoginActivity"
            android:parentActivityName=".LoginActivity.StartActivity" />
        <activity android:name=".LoginActivity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity.RegisterActivity"
            android:parentActivityName=".LoginActivity.StartActivity" />
        <activity android:name=".MainActivity" />
        <service android:name=".Notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".Notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>